<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_size"
        android:orientation="horizontal"
        android:padding="@dimen/margin_small"
        style="@style/ViewDefault">

        <ImageButton
            tools:ignore="RtlHardcoded"
            android:layout_width="@dimen/dialog_header_button_size"
            android:layout_height="@dimen/dialog_header_button_size"
            android:id="@+id/viewer_back"
            android:src="@drawable/icon_back"
            android:background="@color/background_default"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/layout_viewer"/>

</LinearLayout>