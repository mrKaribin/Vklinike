<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.messages.MessagePreviewFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_preview"
    android:padding="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_default"
    android:layout_marginLeft="@dimen/margin_default"
    android:layout_marginRight="@dimen/margin_default"
    android:focusable="true"
    android:clickable="true"
    style="@style/ButtonDefault">

    <ImageView
        android:id="@+id/search_preview_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="0"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="@dimen/margin_default"
        app:srcCompat="@drawable/image_doctor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_preview_fio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_FIO"
            android:layout_marginTop="@dimen/margin_default"
            style="@style/TextHeaderDefault"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_preview_rating"
                android:text="Рейтинг"
                style="@style/TextHeaderDefault"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile_comment_star_gold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/search_preview_specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_default"
            android:text="@string/message_preview_specialization"
            style="@style/TextHeaderDefault"/>

    </LinearLayout>

</LinearLayout>