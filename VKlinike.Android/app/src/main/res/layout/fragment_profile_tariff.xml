<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.profile.doctor.ProfileTariffFragment"
    android:layout_width="@dimen/profile_subscription_block_size"
    android:layout_height="@dimen/profile_subscription_block_size"
    android:orientation="vertical"
    android:id="@+id/subscription_tariff"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_small"
    android:padding="@dimen/margin_small"
    android:focusable="true"
    android:clickable="true"
    style="@style/FrameRounded">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/profile_subscription_block_icon_size"
            android:layout_height="@dimen/profile_subscription_block_icon_size"
            android:src="@drawable/icon_subscription_cost"
            android:layout_marginRight="@dimen/margin_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subscription_tariff_cost"
            android:text="@string/profile_subscription_tariff_cost"
            style="@style/TextDefault"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/profile_subscription_block_icon_size"
            android:layout_height="@dimen/profile_subscription_block_icon_size"
            android:src="@drawable/icon_subscription_time"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subscription_tariff_time"
            android:text="@string/profile_subscription_tariff_time"
            style="@style/TextDefaultList"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>